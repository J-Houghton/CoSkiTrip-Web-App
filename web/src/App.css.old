/* src/App.css */
body {
  font-family: 'Open Sans', sans-serif;
  background-color: #f2f2f2;
}

.App {
  margin: 20px auto;
  max-width: 900px;
  background-color: #fff;
  padding: 30px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

h1 {
  text-align: center;
  margin-bottom: 40px;
}

h2 {
  margin-top: 40px;
  border-bottom: 2px solid #ccc;
  padding-bottom: 10px;
}

h3 {
  margin-top: 30px;
  color: #555;
}

.incident {
  background-color: #ffefef;
  padding: 15px;
  margin: 15px 0;
  border-left: 6px solid #f44336; /* Red for major incidents */
}

.incident h4 {
  margin-top: 0;
  font-size: 1.2em;
}

.incident p {
  margin: 5px 0;
}

.incident ul {
  margin: 5px 0 10px 20px;
}

.incident strong {
  color: #333;
}

/* Additional styles for severity levels */
.incident.minor {
  border-left-color: #ff9800; /* Orange for minor incidents */
}

.incident.major {
  border-left-color: #f44336; /* Red for major incidents */
}

.incident.severe {
  border-left-color: #b71c1c; /* Dark red for severe incidents */
}

table {
  width: 100%;
  border-collapse: collapse;
  margin: 20px 0;
  background-color: #fff;
}

table,
th,
td {
  border: 1px solid #ccc;
}

th,
td {
  padding: 12px;
  text-align: left;
}

th {
  background-color: #f2f2f2;
}
